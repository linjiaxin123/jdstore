<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">产品图片</th>
      <th>产品名称</th>
      <th>价格</th>
      <th width="100">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to edit_admin_product_path(product) do %>
          <img src="https://ooo.0o0.ooo/2017/02/10/589d4a574ac69.png" class="highlight"></img>
          <% end %>
          <%= link_to admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" } do %>
          <img src="https://ooo.0o0.ooo/2017/02/10/589d4a05a0ee8.png" class="highlight"></img>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center col-md-12 pagination">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
