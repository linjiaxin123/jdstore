<!DOCTYPE html>
<html>
<head>
  <title>JDstore 后台</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render "common/navbar" %>
    <div class="row">
      <div class="col-md-2">
        <div class="logo">
          <img src='<%= image_url 'logo.png' %>' class="img-responsive center-block" alt="Logo">
        </div>
        <div id="sidebar_menu" class="sidebar-nav">
           <div class="sidebar-brand text-center"><%= link_to("产品管理", admin_products_path) %></div>
        </div>
        <br>
        <hr>
        <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
          <li> <%= link_to("首页", root_path, :class => "btn btn-info fa fa-home" ) %> </li>
          <li>  </li>
          <li> <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm fa fa-plus-circle") %> </li>
          <li> <%= link_to("登出", destroy_user_session_path, :class => "btn btn-warning fa fa-sign-out", method: :delete) %> </li>
        </ul>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
